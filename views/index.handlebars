<div class="container">
    <div class='row'>
        <div class="col-xs-12 text-center" id='top'>
            <h1>EAT DA BURGER!</h1>
        </div>
    </div>
    <div class="col-xs-9 text center">
        <div class="row">
        {{#each burger_data}}
            {{#unless this.devoured}}
            <div>{{this.id}}. {{this.burger_name}}</div>
        </div>
    </div>
    <div class="col-xs-3 text-center">
        <form method="POST" action="/burgers/update?_method=PUT" class="button">
            <input name='burger_id' type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">DEVOUR IT!</button>
        </form>
    </div>
    {{/unless}}
    {{/each}}
</div>